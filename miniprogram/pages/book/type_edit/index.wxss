/* miniprogram/pages/book/type_edit/index.wxss */

.type-container {
  padding: 32rpx;
}
.title {
  font-size: 40rpx;
}
.type-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}
.no-list {
  font-size: 30rpx;
  color: #ccc;
  text-align: center;
}
.type-title {
  font-size: 36rpx;
}
.add-type {
  margin-top: 30rpx;
}
.dialog {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}
.dialog-content {
  width: 400rpx;
  background: #fff;
  margin: 400rpx auto;
  padding: 40rpx;
  border-radius: 10rpx;
}
.input-box {
  width: 100%;
  height: 60rpx;
  border: 1rpx solid #ccc;
  margin-top: 10rpx;
}
.confirm-btn {
  width: 100%;
  margin-top: 40rpx;
}
.cancel-btn {
  width: 100%;
  margin-top: 20rpx;
}